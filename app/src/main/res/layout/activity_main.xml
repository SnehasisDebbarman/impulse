<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Impulse 2k19 Trailer"
        android:textSize="20dp"
        android:layout_marginLeft="100dp"
        android:background="#fff"
        android:textColor="#000"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="27dp">

        <VideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>

        <Button
            android:id="@+id/btn"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginStart="145dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/enter" />

        <Button
            android:id="@+id/fb"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_alignBottom="@+id/btn"
            android:layout_marginStart="15dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/fb" />

        <Button
            android:id="@+id/location"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_alignBottom="@+id/btn"
            android:layout_marginStart="260dp"
            android:layout_marginBottom="-3dp"
            android:background="@drawable/location" />
    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/idea"
        android:id="@+id/conveners"
        android:text="conveners"/>
    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="145dp"
        android:background="@drawable/website"
        android:id="@+id/website"
        />

        <Button
            android:id="@+id/team"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="450dp"
            android:background="@drawable/teamwork"
            android:text="team" />


    </RelativeLayout>


</ScrollView>